{
  "apiVersion": 2,
  "name": "multivendorx/product-search",
  "title": "Product Search",
  "category": "multivendorx",
  "icon": "search",
  "description": "A product search form for MultiVendorX",
  "editorScript": "file:./index.js",
  "attributes": {
    "align": {
      "type": "string"
    },
    "placeholder": {
      "type": "string",
      "default": "Search products..."
    },
    "layout": {
      "type": "string",
      "default": "inline"
    },
    "inputWidth": {
      "type": "string",
      "default": "300px"
    },
    "inputBackgroundColor": {
      "type": "string",
      "default": "#ffffff"
    },
    "inputTextColor": {
      "type": "string",
      "default": "#333333"
    },
    "inputBorderColor": {
      "type": "string",
      "default": "#cccccc"
    },
    "inputBorderRadius": {
      "type": "string",
      "default": "4px"
    },
    "inputPadding": {
      "type": "string",
      "default": "10px 15px"
    },
    "inputFontSize": {
      "type": "string",
      "default": "16px"
    }
  }
}